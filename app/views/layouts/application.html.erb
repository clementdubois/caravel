<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "jquery-ui-1.8.13.custom"%>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery', 'nested_form' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  
  
  <body	id="store" > 
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= content_for?(:title) ? yield(:title) : "Caravels" %>
    </div> 
    <div id="columns">
      <div id="side"> 
        <div id="connection">
          <% if user_signed_in? %>
            <% if current_user.achat? %>
              <%= link_to "Etat des stocks", stocks_path %><br />
              <%= link_to "Passer une commande", new_order_path %><br />
            <% end %>
            <%= link_to "Déconnexion", destroy_user_session_path %>
          <% else %>
            connexion
            <%= form_for("user", :url => user_session_path) do |f| %>
              <%= f.text_field :email %>
              <%= f.password_field :password %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <%= f.submit 'se connecter' %>
              <%= link_to "Mot de passe oublié ?", new_password_path('user') %>
            <% end %>
            <%= link_to "Inscription", new_user_registration_path %>
          <% end %>
        </div>
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %> 
              <%= render @cart %>
            <% end %>
          <% end %>
        </div>
        <div id="menu">
          <%= link_to "home", root_path %><br />
          <%= link_to 'Add Product', new_reference_path %>
        </div>
      </div> 
      <div id="main">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </div>
    </div>
    <%= yield :javascript %>
  </body>
  
</html>
