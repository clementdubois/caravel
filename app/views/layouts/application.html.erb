<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  
  
  <body	id="store" > 
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= content_for?(:title) ? yield(:title) : "Caravel" %>
    </div> 
    <div id="columns">
      <div id="side"> 
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %> 
              <%= render @cart %>
            <% end %>
          <% end %>
        </div>
        <div id="menu">
          <%= link_to "home", store_path %><br />
          <%= link_to 'Add Product', new_reference_path %>
        </div>
      </div> 
      <div id="main">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </div>
    </div>
  </body>
  
</html>
